{
  "extends": [
    "./tsconfig.settings.json"
  ],
  "include": [
    "./docs/**/*.ts",
  ],
  "compilerOptions": {
    "noEmit": true,
    "emitDeclarationOnly": false,
    "declaration": false
  },
  "exclude": [
    "**/node_modules/**/*",
    "_site",
    "scripts/*.js",
    "elements/**/*.js",
    "elements/*/test/**/*.js",
    "elements/rh-secondary-nav/test/fixtures.js",
    "**/*.spec.ts",
    "**/*.e2e.ts",
    "lib/**/*.js",
    "./*.config.js"
  ],
}
